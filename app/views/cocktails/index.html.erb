 <div class="container">
  <div class="header">
    <h1>All Cocktails</h1>
      <div class="link-btn"><%= link_to 'Create a cocktail', new_cocktail_path, class: "link-item", class: "index-button"  %></div>
  </div>

    <div class="cocktail-list row justify-content-around p-3">
      <% @cocktails.each do |cocktail| %>
        <% unless cocktail.photo.blank? %>
          <div class="card m-3">
               <%=cl_image_tag cocktail.photo, height: 200, width: 300, crop: :fill %>
              <!-- <img src="https://images.unsplash.com/photo-1530064161350-7824b8cdeee9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="card-image"> -->
              <div class="card-body">
              <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
              <%= link_to 'Delete cocktail', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

