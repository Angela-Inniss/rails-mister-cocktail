
<body>
<div class="navbar d-flex">
  <div class="logo">
    <a href="">
      <img src="https://images.unsplash.com/photo-1455278996551-747adfa0f7cb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" class="avatar">
    </a>

  </div>
  <div class=" ">
    <button type="button" class="btn btn-info" id="create-button"><%= link_to 'Create a cocktail', new_cocktail_path %>
    </button>
  </div>
</div>

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1452784444945-3f422708fe5e?ixlib=rb-1.2.1&auto=format&fit=crop&w=1052&q=80);">
    <div class="">
      <h1>Best Rum Cocktails in Town</h1>
    </div>
  </div>

 <div class="container">
    <div class="cocktail-list row justify-content-around p-3">
      <% @cocktails.each do |cocktail| %>

        <div class="card m-3">
            <%=cl_image_tag cocktail.photo, height: 200, width: 300, crop: :fill %>
            <div class="card-body">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
            <%= link_to 'Delete cocktail?', cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }%>
          </div>
        </div>
      <% end %>
    </div>
  </div>


</body>
