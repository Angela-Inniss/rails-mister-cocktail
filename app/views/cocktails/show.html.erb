<!-- adding images from cloudinary and writing ruby make sure that if a
user does not upload an image then don't let them create a cocktail. cl image tag is the tag used in combination with cloudinary to display an image  -->
<% if @cocktail.photo.present? %>
  <%=cl_image_tag @cocktail.photo, height: 200, width: 300, crop: :fill %>
<% end %>

<p id="notice"><%= notice %></p>
<h1><%= @cocktail.name %></h1>
<h3>Recipe for the Cocktail</h3>

<strong>Ingredients</strong>
<% @cocktail.doses.each do |dose|%>
  <div>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i>
  <% end %>
  </div>
<% end %>

<%= link_to 'Go back to cocktails list', cocktails_path  %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail)  %>















